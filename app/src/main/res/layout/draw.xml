<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_doodle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/tunes_height"
                android:layout_marginTop="?actionBarSize">

                <android.support.v7.widget.CardView
                    android:id="@+id/content"
                    style="@style/CardViewStyle.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="@dimen/cardview_default_elevation">

                    <com.tomclaw.drawa.draw.view.DrawingView
                        android:id="@+id/drawing_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/tunes_height"
                android:background="@drawable/shadow_top" />

            <LinearLayout
                android:id="@+id/tools_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/tunes_height"
                android:background="@color/color_semitransparent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/tools_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/shadow_top" />

                <include layout="@layout/selector_flipper" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tunes_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tunes_height"
                android:layout_gravity="bottom"
                android:background="@color/color_light_gray"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tune_tool"
                    style="@style/TuneItem"
                    android:src="@drawable/lead_pencil"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/tune_color"
                    style="@style/TuneItem"
                    android:src="@drawable/circle"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/tune_size"
                    style="@style/TuneItem"
                    android:src="@drawable/marker"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </FrameLayout>

    </ViewFlipper>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <include layout="@layout/shadow_toolbar" />

</FrameLayout>