<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_light_gray">

    <LinearLayout
        android:id="@+id/tool_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/tool_pencil"
            style="@style/ToolItem"
            android:src="@drawable/lead_pencil"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tool_brush"
            style="@style/ToolItem"
            android:src="@drawable/brush"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tool_marker"
            style="@style/ToolItem"
            android:src="@drawable/marker"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tool_fluffy"
            style="@style/ToolItem"
            android:src="@drawable/spray"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tool_fill"
            style="@style/ToolItem"
            android:src="@drawable/format_color_fill"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tool_eraser"
            style="@style/ToolItem"
            android:src="@drawable/eraser"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/color_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <com.tomclaw.drawa.draw.view.PaletteView
            android:id="@+id/palette_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:palette="@array/palette" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/size_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/size_s"
            style="@style/SizeItem"
            android:src="@drawable/size_s"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/size_m"
            style="@style/SizeItem"
            android:src="@drawable/size_m"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/size_l"
            style="@style/SizeItem"
            android:src="@drawable/size_l"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/size_xl"
            style="@style/SizeItem"
            android:src="@drawable/size_xl"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/size_xxl"
            style="@style/SizeItem"
            android:src="@drawable/size_xxl"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</FrameLayout>